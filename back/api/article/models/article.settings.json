{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "body": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "boolean",
      "default": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    }
  }
}
